<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%=@book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.eacch do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<label>Title</label>
<%= f.text_field :title %>

<label>Body</label>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<%= link_to "Show", book_path(book.id) %>
<span>/</span>
<%= link_to "Back", "/books" %>
